<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Homepage</title>
    <style>
      .inputbar {
        margin-bottom: 20px;
        text-align: center;
      }

      .categorie-cards {
        display: grid;
        gap: 50px 100px;
        font-size: 10px;
      }

      .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        padding: 16px;
        text-align: center;
        background-color: #f1f1f1;
        margin-left: 30%;
        margin-right: 30%;
        width: 40%;
        height: 20vh;
      }

      .card h1 {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <%- include('../views/header') %>
      <div class="inputbar">
        <h1>Add a Categorie</h1>
        <form action="/categories" method="post">
          <input
            type="text"
            name="categorieName"
            placeholder="Enter a Categorie"
          />
          <button type="submit">Submit</button>
        </form>
      </div>
      <% if(categories.length >= 1){ %>
      <div class="categorie-cards">
        <% categories.forEach((item)=>{ %>
        <div class="card">
          <h1>Categorie Name: <%= item.categorieName %></h1>
          <h1>No. of items: <%= item.numberOfItems %></h1>
        </div>
        <% }) %>
      </div>
      <% } else{ %>
      <h1>No Categorie, please add a categorie...</h1>
      <% } %>
    </div>
  </body>
</html>
